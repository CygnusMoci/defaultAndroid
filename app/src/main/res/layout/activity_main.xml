<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/base_view"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text=" "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="120dp"
        android:layout_marginTop="210dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/base_view">

        <Button
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="左" />

        <LinearLayout
            android:layout_width="118dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/up"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="上" />

            <Button
                android:id="@+id/down"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="下" />
        </LinearLayout>

        <Button
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="右" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="414dp"
        android:layout_height="320dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/base_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="397dp"
            android:layout_height="254dp"
            app:srcCompat="@drawable/splash_background" />
    </FrameLayout>


    <TextView
        android:id="@+id/logPreview"
        android:layout_width="359dp"
        android:layout_height="162dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:maxLines="20"
        android:scrollbars="vertical"
        android:text="log"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/base_view" />

    <Button
        android:id="@+id/swcPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="12dp"
        android:text="切换图片"
        app:layout_constraintBottom_toTopOf="@+id/logPreview"
        app:layout_constraintStart_toEndOf="@+id/base_view" />

</androidx.constraintlayout.widget.ConstraintLayout>