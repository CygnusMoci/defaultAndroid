<network-security-config>
    <base-config>
        <trust-anchors>
            <certificates
                overridePins="true"
                src="system" /> <!--信任系统证书-->
            <certificates
                overridePins="true"
                src="user" /> <!--信任用户证书-->
        </trust-anchors>
    </base-config>
</network-security-config>